{
  "name": "@ludorum/core",
  "description": "A board game implementation library, focusing on artificial intelligence.",
  "keywords": [
    "board game",
    "game",
    "artificial intelligence",
    "game ai"
  ],
  "version": "0.3.0-alpha",
  "main": "dist/core.js",
  "files": [
    "dist/",
    "LICENSE.md",
    "README.md"
  ],
  "author": {
    "name": "Leonardo Val",
    "email": "leonardo.val@creatartis.com"
  },
  "homepage": "http://creatartis.com",
  "contributors": [],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "http://github.com/LeonardoVal/ludorum.js"
  },
  "dependencies": {
    "@creatartis/randomness": "0.2.0-alpha"
  },
  "devDependencies": {
    "@creatartis/creatartis-build": "0.3.0-alpha",
    "htm": "^3.1.0",
    "sermat": "^0.1.1",
    "webpack-dev-server": "^4.8.1"
  },
  "scripts": {
    "build": "npx creatartis-build lint build test doc",
    "doc": "npx creatartis-build doc",
    "lint": "npx creatartis-build lint",
    "playtest-web:bet": "npx webpack serve --config test/playtester-bet/webpack.config.js",
    "playtest-node:bet": "node test/scripts/playtester-bet.js ui random",
    "playtest-node:choose2win": "node test/scripts/playtester-choose2win.js ui random",
    "release": "npm run build && npx creatartis-build release",
    "release:verdaccio": "npm run build && npx creatartis-build release:verdaccio",
    "rerelease:verdaccio": "npm run build && npx creatartis-build rerelease:verdaccio",
    "test": "npx creatartis-build lint test"
  }
}
