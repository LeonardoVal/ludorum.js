{
  "name": "@ludorum/core",
  "description": "A board game implementation library, focusing on artificial intelligence.",
  "keywords": [
    "board game",
    "game",
    "artificial intelligence",
    "game ai"
  ],
  "version": "0.3.0",
  "author": {
    "name": "Leonardo Val",
    "email": "leonardo.val@creatartis.com"
  },
  "homepage": "http://creatartis.com",
  "contributors": [],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "http://github.com/LeonardoVal/ludorum.js"
  },
  "main": "core.js",
  "module": "index.js",
  "dependencies": {
    "@creatartis/randomness": "^0.1.1",
    "sermat": "^0.1.0"
  },
  "devDependencies": {
    "@creatartis/creatartis-build": "0.2.4-beta"
  },
  "scripts": {
    "build": "npx creatartis-build lint build:esm build test doc",
    "doc": "npx creatartis-build doc",
    "lint": "npx creatartis-build lint",
    "release": "npm run build && npx creatartis-build release",
    "release:verdaccio": "npm run build && npx creatartis-build release:verdaccio",
    "rerelease:verdaccio": "npm run build && npx creatartis-build rerelease:verdaccio",
    "test": "npx creatartis-build lint test"
  },
  "babel": {
    "extends": "./node_modules/@creatartis/creatartis-build/babel-config.js"
  },
  "eslintConfig": {
    "extends": "./node_modules/@creatartis/creatartis-build/eslint-config.js",
    "rules": {
      "no-await-in-loop": 0,
      "no-console": 0,
      "import/no-dynamic-require": 0,
      "no-mixed-operators": 0,
      "no-param-reassign": 0,
      "no-restricted-syntax": 0,
      "no-unused-vars": 0
    }
  },
  "eslintIgnore": [
    "dist/",
    "node_modules/"
  ],
  "jest": {
    "setupFilesAfterEnv": [
      "./node_modules/@creatartis/creatartis-build/jest-setup.js"
    ],
    "testPathIgnorePatterns": [
      "node_modules/",
      "src/",
      "dist/"
    ],
    "transform": {
      "\\.jsx?$": "babel-jest"
    },
    "verbose": true
  }
}
